    <section id="order-details" class="my-5">
            <div class="container">
                    <div class="row text-center pt-5">
                        <div class="col-12">
                            <h2>order details</h2>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-12">
                            <h5><i class="fa fa-shopping-cart"> products:</i></h5>
                            <h4  class="d-inline-block">status:</h4> <span class="badge badge-warning">processing</span>
                            <br>
                        </div>
                    </div>
                <div class="row">
                    <%=order%>
                    <div class="row">
                        <div class="col-12 p-5">
                                <table class="table table-striped text-center" >
                                    <thead>
                                        <tr>
                                            <th>Date Of Ading</th>
                                            <th>product name</th>
                                            <th class="hidden-xs">Price</th>
                                            <th>Quantaty</th>
                                            <th >Image</th>
                                        </tr>
                                        <tbody>
                                            order.product[0]["DateOfAdding"]
                                            <% order.product.forEach((PRO ,index)=>{ %>
                                                <tr>
                                                    <th scope="row"><%=PRO.DateOfAdding.toDateString() %></th> 
                                                    <td scope="row"><%=PRO.product%></td>
                                                    <td scope="row"><%=PRO.price%>$</td>
                                                    <td scope="row"><%=PRO.qyt %></td>
                                                    <td scope="row"><img style="width: 50px ; height:50px" src="../../assets/imgs/<%=PRO.image%>"/></td>
                                                </tr>
                                            <% }) %>

                                        </tbody>
                                    </thead>
                            </table>
                        </div>
                    </div>
                    <div class="row info">
                        <div class="col-6 p-5">
                            <h3>customer info:</h3>
                            <form>
                                <label for="name">name :</label>
                                <p class="d-inline"><%=order.Name%>.</p>
                                <br />
                                <br />
                                <label for="name">Address :</label>
                                <p class="d-inline"><%=order.Address%>.</p>
                                <br />
                                <br />
                                <label for="name">telephone :</label>
                                <p class="d-inline"><%=order.Phone%></p>
                                <br />
                                <br />
                                <label for="name">address :</label>
            
                                <p class="d-inline"><%=order.Address%></p>
                                <br />
                                <br />
                               
                            </form>
                          
                        </div>
                        <div class="col-6">
                            <img src="../../../assets/imgs/personal-info.svg" alt="personal-info" class="img-fluid">
                        </div>
                    </div>
                </div>
            </div>
